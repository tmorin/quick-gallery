doctype html
html
  head
    title Quick Gallery
    link(rel='stylesheet',type='text/css',href='styles/components.css')
    link(rel='stylesheet',type='text/css',href='styles/app.css')
  body
    .navbar.navbar-default
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(data-toggle="collapse",data-target="#navbar-collapse")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          .navbar-brand QuickGallery
        #navbar-collapse.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(type="button",data-toggle="modal",data-target="#directories",href="")
                i.fa.fa-fw.fa-sitemap
                span Directories
            li
              a(type="button",data-toggle="modal",data-target="#basket",href="")
                i.fa.fa-fw.fa-shopping-cart
                span Basket
            li
              a(type="button",data-toggle="modal",data-target="#adminCache",href="")
                i.fa.fa-fw.fa-gear
                span Cache
            li
              a(type="button",data-toggle="modal",data-target="#adminLogs",href="")
                i.fa.fa-fw.fa-info
                span Logs
    #directory.container-fluid
      form.navbar-form
        ol.title.breadcrumb
      .content
        ul.directories.nav.nav-pills
      .content
        ul.pictures.nav.nav-pills
    #adminLogs.expanded.modal.fade
      .modal-dialog
        .modal-content
          .modal-header
            h4
              i.text-muted.fa.fa-fw.fa-info
              span Logs
              .pull-right.small.text-muted
                a.text-muted(href="",data-dismiss="modal")
                  i.fa.fa-fw.fa-close
          .modal-body
            pre
          .modal-footer
            a.btn.btn-default(target="_blank",href="api/logs")
                i.fa.fa-fw.fa-external-link
            button.btn.btn-default.refresh(type="button")
              i.fa.fa-fw.fa-refresh
    #adminCache.modal.fade
      .modal-dialog
        .modal-content
          .modal-header
            h4
              i.text-muted.fa.fa-fw.fa-gear
              span Cache
              .pull-right.small.text-muted
                a.text-muted(href="",data-dismiss="modal")
                  i.fa.fa-fw.fa-close
          .modal-body
            button.btn.btn-default.btn-block.directories(type="button")
              i.fa.fa-fw.fa-refresh
              span Refresh directories
            hr
            .alert-container
            form(name="adminForm")
              .row
                .col-md-6
                  .checkbox
                    label
                      input(type="checkbox",name="thumbnails")
                      span Build thumbnails
                  .checkbox
                    label
                      input(type="checkbox",name="adapted")
                      span Build adapted pictures
                  .checkbox
                    label
                      input(type="checkbox",name="clean")
                      span Clean the selected cache directories before the cache builder process
                .col-md-6
                  button.btn.btn-default.btn-block.status(type="button")
                    i.fa.fa-fw.fa-refresh
                    span Refresh status
                  button.btn.btn-primary.btn-block.start(type="button")
                    i.fa.fa-fw.fa-play
                    span Start the process
                  button.btn.btn-danger.btn-block.stop(type="button")
                    i.fa.fa-fw.fa-stop
                    span Stop current process
    #directories.modal.fade
      .modal-dialog
        .modal-content
          .modal-header
            h4
              i.text-muted.fa.fa-fw.fa-sitemap
              span Directories
              .pull-right.small.text-muted
                a.text-muted(href="",data-dismiss="modal")
                  i.fa.fa-fw.fa-close
          .modal-body
            ul.tree
    #picture.expanded.modal.fade
      .modal-dialog
        .modal-content
          .modal-header
              h4
                i.text-muted.fa.fa-fw.fa-file-picture-o
                span.title
                .pull-right.small.text-muted
                  span.currentPicIndex
                  span /
                  span.picsCounter
                  span= " "
                  a.text-muted(href="",data-dismiss="modal")
                    i.fa.fa-fw.fa-close
          .modal-body
          .modal-footer
            button.basket-toggle.btn.btn-default(type="button",data-toggle="button",aria-pressed="false",autocomplete="off")
            i.fa.fa-fw.fa-cart-plus
            a.download.btn.btn-default(target="_blank")
              i.fa.fa-fw.fa-download
            button.previous.btn.btn-default(type="button")
              i.fa.fa-fw.fa-chevron-left
            button.next.btn.btn-default(type="button")
              i.fa.fa-fw.fa-chevron-right
    #basket.modal.fade
      .modal-dialog
        .modal-content
          .modal-header
            h4
              i.text-muted.fa.fa-fw.fa-shopping-cart
              span Basket
              .pull-right.small.text-muted
                a.text-muted(href="",data-dismiss="modal")
                  i.fa.fa-fw.fa-close
          .modal-body
            .form
              .form-group
                label(for="basketName") Name
                input.form-control(id="basketName",name="name",placeholder="the basket's name")
              .checkbox
                label
                  input(name="flatten",type="checkbox",value="true")
                  span if checked, directories are flatten
            .media-container
          .modal-footer
            button.download.btn.btn-primary(type="button")
              i.fa.fa-fw.fa-cart-arrow-down
    script(src="scripts/components.js")
    script(src="scripts/app.js")
